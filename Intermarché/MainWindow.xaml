<Window
    x:Class="Intermarché.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Intermarché"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Acceuil"
    Width="1280"
    Height="800"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d" ResizeMode="NoResize">
    <Grid>
        <StackPanel  Background="#FF4C4A4A">
            <Image
                Width="292"
                Height="71"
                Source="/img/intermarche-logo.png"
                Stretch="Fill" Margin="0,10,0,0" />
        </StackPanel>
        <TabControl Margin="0,74,0,0">
            <TabItem>
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" Text="Effectuer Réservation"/>
                    </StackPanel>
                </TabItem.Header>
                <StackPanel>
                    <StackPanel Height="685" Width="1278" Background="#FF8C8C8C"/>
                </StackPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock TextWrapping="Wrap" Text="Visulaiser Réservation"/>
                    </StackPanel>
                </TabItem.Header>
                <StackPanel>
                    <StackPanel x:Name="spEffectuerResa" Height="142" Width="851" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Label
                            Margin="50,20,0,0"
                            Content="Rechercher par N° Client / N° Réservation"
                            FontSize="16"
                            FontWeight="Bold" />
                        <StackPanel
                            x:Name="spRecherche"
                            Height="36"
                            Margin="50,20,50,20"
                            Orientation="Horizontal" Width="793">
                            <TextBox
                            x:Name="tbRecherche"
                            Width="670"
                            Text=""
                            TextWrapping="Wrap" Background="#FFC8C8C8" />
                            <Button
                            x:Name="butRecherche"
                            Width="42"
                            Margin="20,0,0,0"
                            BorderBrush="{x:Null}"
                            Content=""
                            FontSize="14">
                                <Button.Background>
                                    <ImageBrush ImageSource="/rechercher.png"/>
                                </Button.Background>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Height="502" Width="1224" Background="#FFBBBBBB" HorizontalAlignment="Right" Orientation="Horizontal">
                        <Grid Width="909">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="7*"/>
                                <ColumnDefinition Width="855*"/>
                            </Grid.ColumnDefinitions>
                            <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="7,7,24,7" Grid.Column="1"/>
                        </Grid>
                        <StackPanel Width="315">
                            <Label Content="Filtrer la recherche par :" FontSize="16" Margin="0,15,0,0" FontWeight="Bold"/>
                            <Label Content="Date de réservation" FontSize="16" Margin="0,25,0,0" HorizontalAlignment="Center"/>
                            <DatePicker FontSize="14" Width="240" Height="30" Margin="0,10,0,0"/>
                            <Label Content="Catégorie  de véhicule" FontSize="16" Margin="0,20,0,0" HorizontalAlignment="Center"/>
                            <ComboBox Width="240" Margin="0,10,0,0"/>
                            <Label Content="Disponibilité magasin" FontSize="16" Margin="0,20,0,0" HorizontalAlignment="Center"/>
                            <ComboBox Width="240" Margin="0,10,0,0"/>
                            <Label Content="Type de boîte" FontSize="16" Margin="0,20,0,0" HorizontalAlignment="Center"/>
                            <ComboBox Width="240" Margin="0,10,0,0"/>

                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
