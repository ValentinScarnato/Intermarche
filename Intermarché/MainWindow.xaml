<Window
    x:Class="Intermarché.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Intermarché"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Acceuil"
    Width="1280"
    Height="800"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d" ResizeMode="NoResize">
    <Grid>
        <StackPanel  Background="#FF4C4A4A">
            <Image
                Width="292"
                Height="71"
                Source="/img/intermarche-logo.png"
                Stretch="Fill" Margin="0,10,0,0" />
        </StackPanel>
        <TabControl Margin="0,74,0,0">
            <TabItem>
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" Text="Effectuer Réservation"/>
                    </StackPanel>
                </TabItem.Header>
                <StackPanel>
                    <StackPanel Height="685" Width="1278" Background="#FF8C8C8C"/>
                </StackPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock TextWrapping="Wrap" Text="Visulaiser Réservation"/>
                    </StackPanel>
                </TabItem.Header>
                <StackPanel>
                    <StackPanel x:Name="spEffectuerResa" Height="142" Width="990" HorizontalAlignment="Left">
                        <Label
                Margin="50,20,0,0"
                Content="Rechercher par N° Client / N° Réservation"
                FontSize="16"
                FontWeight="Bold" />
                        <StackPanel
                x:Name="spRecherche"
                Height="36"
                Margin="50,20,50,20"
                Orientation="Horizontal">
                            <TextBox
                    x:Name="tbRecherche"
                    Width="670"
                    Text=""
                    TextWrapping="Wrap" Background="#FFC8C8C8" />
                            <Button
                    x:Name="butRecherche"
                    Width="42"
                    Margin="20,0,0,0"
                    BorderBrush="{x:Null}"
                    Content=""
                    FontSize="14">
                                <Button.Background>
                                    <ImageBrush ImageSource="/rechercher.png"/>
                                </Button.Background>
                            </Button>
                        </StackPanel>
                        <StackPanel Height="442" Width="990" Margin="0,15,0,0">
                            <Grid Width="990" Height="440" Background="White">
                                <DataGrid x:Name="dataGridReservations" AutoGenerateColumns="True" Margin="50,46,77,46" Foreground="Black" Grid.Row="1" Grid.Column="1" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Height="440" Width="282" Background="#FFBBBBBB" HorizontalAlignment="Right"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
