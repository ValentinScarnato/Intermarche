<Window
    x:Class="Intermarché.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Intermarché"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Acceuil"
    Width="1280"
    Height="800"
    Closed="Window_Closed"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:DataAccess x:Name="data" />
    </Window.DataContext>
    <Grid>
        <StackPanel Background="#FF4C4A4A">
            <Image
                Width="292"
                Height="71"
                Margin="0,10,0,0"
                Source="/img/intermarche-logo.png"
                Stretch="Fill" />
        </StackPanel>
        <TabControl Margin="0,74,0,0">
            <TabItem>
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock Text="Effectuer Réservation" TextWrapping="Wrap" />
                    </StackPanel>
                </TabItem.Header>
                <StackPanel Background="#FFC7C7C7">
                    <Label
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="Réserver un véhicule"
                        FontSize="20"
                        FontStyle="Italic"
                        FontWeight="Bold" />
                    <Label
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="Veuillez renseigner les champs ci-dessous"
                        FontSize="14"
                        FontStyle="Italic" />
                    <StackPanel
                        Width="1275"
                        Height="31"
                        Margin="0,5,0,0"
                        Orientation="Horizontal">
                        <Label
                            Margin="40,0,0,0"
                            Content="Date de début de réservation"
                            FontSize="14"
                            FontWeight="Bold" />
                        <Label
                            Margin="40,0,0,0"
                            Content="Date de fin de réservation"
                            FontSize="14"
                            FontWeight="Bold" />
                    </StackPanel>
                    <StackPanel
                        Width="1275"
                        Height="64"
                        Margin="0,-5,0,0"
                        Orientation="Horizontal">
                        <DatePicker
                            x:Name="dpDateDebut"
                            Margin="50,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14" />
                        <DatePicker
                            x:Name="dpDateFin"
                            Margin="69,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14" />
                        <Button
                            Width="140"
                            Height="30"
                            Margin="40,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="Rechercher"
                            FontSize="14" />
                        <Button
                            x:Name="butCreateClient"
                            Width="140"
                            Height="30"
                            Margin="50,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="butCreateClient_Click"
                            Content="Créer client"
                            FontSize="14" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label
                            Margin="40,0,0,0"
                            Content="Numéro Client"
                            FontSize="14"
                            FontWeight="Bold" />
                        <Label
                            Margin="40,0,0,0"
                            Content="Forfait Kilométrique"
                            FontSize="14"
                            FontWeight="Bold" />
                    </StackPanel>
                    <StackPanel
                        Width="1275"
                        Height="64"
                        Margin="0,-5,0,0"
                        Orientation="Horizontal">
                        <TextBox
                            x:Name="tbNumClient"
                            Width="88"
                            Height="24"
                            Margin="50,0,0,0"
                            Text=""
                            TextWrapping="Wrap" />
                        <TextBox
                            x:Name="tbForfaitKm"
                            Width="133"
                            Height="24"
                            Margin="50,0,0,0"
                            Text=""
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <StackPanel
                        Width="1270"
                        Height="326"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <Grid Width="1020" Height="319">
                            <DataGrid
                                x:Name="datagridVehicule"
                                Grid.Column="1"
                                Margin="7,7,24,7"
                                AutoGenerateColumns="True"
                                ItemsSource="{Binding LesVehicules}" />
                        </Grid>
                    </StackPanel>
                    <StackPanel Height="49" Margin="0,1,0,0">
                        <Button
                            x:Name="butReserver"
                            Width="152"
                            Click="butReserver_Click"
                            Content="Reserver" />
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Visualiser Réservation" TextWrapping="Wrap" />
                    </StackPanel>
                </TabItem.Header>
                <StackPanel>
                    <StackPanel
                        x:Name="spEffectuerResa"
                        Width="851"
                        Height="142"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                        <Label
                            Margin="50,20,0,0"
                            Content="Rechercher par N° Client / N° Réservation"
                            FontSize="16"
                            FontWeight="Bold" />
                        <StackPanel
                            x:Name="spRecherche"
                            Width="793"
                            Height="36"
                            Margin="50,20,50,20"
                            Orientation="Horizontal">
                            <TextBox
                                x:Name="tbRecherche"
                                Width="670"
                                Background="#FFC8C8C8"
                                Text=""
                                TextWrapping="Wrap" />
                            <Button
                                x:Name="butRecherche"
                                Width="42"
                                Margin="20,0,0,0"
                                BorderBrush="{x:Null}"
                                Click="butRecherche_Click"
                                Content=""
                                FontSize="14">
                                <Button.Background>
                                    <ImageBrush ImageSource="/rechercher.png" />
                                </Button.Background>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel
                        Width="1224"
                        Height="502"
                        HorizontalAlignment="Right"
                        Background="#FFBBBBBB"
                        Orientation="Horizontal">
                        <Grid Width="909">
                            <DataGrid
                                x:Name="reservationsDataGrid"
                                Grid.Column="1"
                                Margin="7,7,24,7"
                                AutoGenerateColumns="True"
                                ItemsSource="{Binding LesReservations}" />
                        </Grid>
                        <StackPanel Width="315">
                            <Label
                                Margin="0,15,0,0"
                                Content="Filtrer la recherche par :"
                                FontSize="16"
                                FontWeight="Bold" />
                            <Label
                                Margin="0,25,0,0"
                                HorizontalAlignment="Center"
                                Content="Date de réservation"
                                FontSize="16" />
                            <DatePicker
                                Width="240"
                                Height="30"
                                Margin="0,10,0,0"
                                FontSize="14" />
                            <Label
                                Margin="0,20,0,0"
                                HorizontalAlignment="Center"
                                Content="Catégorie  de véhicule"
                                FontSize="16" />
                            <ComboBox Width="240" Margin="0,10,0,0" />
                            <Label
                                Margin="0,20,0,0"
                                HorizontalAlignment="Center"
                                Content="Disponibilité magasin"
                                FontSize="16" />
                            <ComboBox Width="240" Margin="0,10,0,0" />
                            <Label
                                Margin="0,20,0,0"
                                HorizontalAlignment="Center"
                                Content="Type de boîte"
                                FontSize="16" />
                            <ComboBox Width="240" Margin="0,10,0,0" />

                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>