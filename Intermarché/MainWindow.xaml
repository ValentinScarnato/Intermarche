<Window
    x:Class="Intermarché.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Intermarché"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Intermaché-Réservation"
    Width="1280"
    Height="800"
    Closed="Window_Closed"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:DataAccess x:Name="data" />
    </Window.DataContext>
    <Grid>
        <StackPanel Background="#FF4C4A4A">
            <StackPanel
                Width="1280"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Image
                    Width="292"
                    Height="71"
                    Margin="500,10,0,0"
                    HorizontalAlignment="Center"
                    Source="/img/intermarche-logo.png"
                    Stretch="Fill" />
                <Button
                    Width="115"
                    Height="35"
                    Margin="350,0,0,0"
                    HorizontalAlignment="Right"
                    Click="Button_Click"
                    Content="Déconnexion"
                    FontSize="13"
                    FontWeight="Bold" />
            </StackPanel>

        </StackPanel>
        <TabControl Margin="0,74,0,0">
            <TabItem>
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock Text="Effectuer Réservation" TextWrapping="Wrap" />
                    </StackPanel>
                </TabItem.Header>
                <StackPanel Background="#FFC7C7C7">
                    <Label
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="Réserver un véhicule"
                        FontSize="20"
                        FontStyle="Italic"
                        FontWeight="Bold" />
                    <Label
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="Veuillez renseigner les champs ci-dessous"
                        FontSize="14"
                        FontStyle="Italic" />
                    <StackPanel
                        Width="1275"
                        Height="31"
                        Margin="0,5,0,0"
                        Orientation="Horizontal">
                        <Label
                            Margin="40,0,0,0"
                            Content="Date de début de réservation"
                            FontSize="14"
                            FontWeight="Bold" />
                        <Label
                            Margin="40,0,0,0"
                            Content="Date de fin de réservation"
                            FontSize="14"
                            FontWeight="Bold" />
                    </StackPanel>
                    <StackPanel
                        Width="1275"
                        Height="64"
                        Margin="0,-5,0,0"
                        Orientation="Horizontal">
                        <DatePicker
                            x:Name="dpDateDebut"
                            Margin="50,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14" />
                        <DatePicker
                            x:Name="dpDateFin"
                            Margin="69,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14" />
                        <Button
                            Width="140"
                            Height="30"
                            Margin="40,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="Rechercher"
                            FontSize="14" />
                        <Button
                            x:Name="butCreateClient"
                            Width="140"
                            Height="30"
                            Margin="50,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="butCreateClient_Click"
                            Content="Créer client"
                            FontSize="14" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label
                            Margin="40,0,0,0"
                            Content="Numéro Client"
                            FontSize="14"
                            FontWeight="Bold" />
                        <Label
                            Margin="40,0,0,0"
                            Content="Forfait Kilométrique"
                            FontSize="14"
                            FontWeight="Bold" />
                    </StackPanel>
                    <StackPanel
                        Width="1275"
                        Height="64"
                        Margin="0,-5,0,0"
                        Orientation="Horizontal">
                        <TextBox
                            x:Name="tbNumClient"
                            Width="88"
                            Height="24"
                            Margin="50,0,0,0"
                            Text=""
                            TextWrapping="Wrap" />
                        <TextBox
                            x:Name="tbForfaitKm"
                            Width="133"
                            Height="24"
                            Margin="50,0,0,0"
                            Text=""
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <StackPanel
                        Width="1270"
                        Height="326"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <Grid Width="1248" Height="318">
                            <DataGrid
                                x:Name="dgVehicule"
                                Margin="7,7,0,7"
                                AutoGenerateColumns="False"
                                IsReadOnly="True"
                                ItemsSource="{Binding LesVehicules}" >
                                <DataGrid.Columns >
                                    <DataGridTextColumn Header="Immatriculation" Binding="{Binding Immatriculation}" Width="100" />
                                    <DataGridTextColumn Header="Type de Boite" Binding="{Binding TypeBoite}" Width="90" />
                                    <DataGridTextColumn Header="N° de Magasin" Binding="{Binding NumMagasin}" Width="90" />
                                    <DataGridTextColumn Header="Nom de Categorie" Binding="{Binding NomCategorie}" Width="110" />
                                    <DataGridTextColumn Header="Nom de Vehicule" Binding="{Binding NomVehicule}" Width="110" />
                                    <DataGridTextColumn Header="Description du Vehicule" Binding="{Binding DescriptionVehicule}" Width="140" />
                                    <DataGridTextColumn Header="NombrePlaces" Binding="{Binding NombrePlaces}" Width="90" />
                                    <DataGridTextColumn Header="Prix de Location" Binding="{Binding PrixLocation}" Width="100" />
                                    <DataGridTextColumn Header="Climatisation" Binding="{Binding Climatisation}" Width="80" />
                                    <DataGridTextColumn Header="Lien Photo Url" Binding="{Binding LienPhotoUrl}" Width="1100" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </StackPanel>
                    <StackPanel Height="49" Margin="0,1,0,0">
                        <Button
                            x:Name="butReserver"
                            Width="152"
                            Click="butReserver_Click"
                            Content="Reserver" />
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Visualiser Réservation" TextWrapping="Wrap" />
                    </StackPanel>
                </TabItem.Header>
                <StackPanel>
                    <StackPanel
                        x:Name="spEffectuerResa"
                        Width="851"
                        Height="142"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <Label
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            Content="Rechercher par N° Client / N° Réservation"
                            FontSize="16"
                            FontWeight="Bold" />
                        <StackPanel
                            x:Name="spRecherche"
                            Width="577"
                            Height="36"
                            Orientation="Horizontal" HorizontalAlignment="Center" Margin="40,20,0,0">
                            <TextBox
                                x:Name="tbRecherche"
                                Width="503"
                                Background="#FFC8C8C8"
                                Text=""
                                TextWrapping="Wrap" TextChanged="tbRecherche_TextChanged" TextAlignment="Center" FontWeight="Bold" HorizontalAlignment="Center" Height="24" />
                            <Label Content="" Width="30" Height="30" Margin="20,0,0,0">
                                <Label.Background>
                                    <ImageBrush ImageSource="/rechercher.png"/>
                                </Label.Background>
                            </Label>

                        </StackPanel>
                    </StackPanel>
                    <StackPanel
                        Width="1324"
                        Height="550"
                        HorizontalAlignment="Center"
                        Background="#FFBBBBBB"
                        Orientation="Horizontal">
                        <Grid Width="1182">
                            <DataGrid
                                x:Name="dgReservationConsulter"
                                Margin="120,7,17,7"
                                AutoGenerateColumns="False"
                                IsReadOnly="True"
                                ItemsSource="{Binding LesReservations}"
                                SelectionChanged="reservationsDataGrid_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Width="90"
                                        Binding="{Binding NumReservation}"
                                        Header="N° Réservation" />
                                    <DataGridTextColumn
                                        Width="90"
                                        Binding="{Binding NumAssurance}"
                                        Header="N° Assurance" />
                                    <DataGridTextColumn
                                        Width="90"
                                        Binding="{Binding NumClient}"
                                        Header="N° Client" />
                                    <DataGridTextColumn
                                        Width="170"
                                        Binding="{Binding DateReservation}"
                                        Header="Date de réservation" />
                                    <DataGridTextColumn
                                        Width="170"
                                        Binding="{Binding DateDebutReservation}"
                                        Header="Date de début de réservation" />
                                    <DataGridTextColumn
                                        Width="170"
                                        Binding="{Binding DateFinReservation}"
                                        Header="Date de fin de réservation" />
                                    <DataGridTextColumn
                                        Width="150"
                                        Binding="{Binding MontantReservation}"
                                        Header="Montant de Reservation" />
                                    <DataGridTextColumn
                                        Width="110"
                                        Binding="{Binding NumAssurance}"
                                        Header="Numero Assurance" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>