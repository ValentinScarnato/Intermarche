<Window
    x:Class="Intermarché.Menu_Intermarche"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Intermarché"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Menu"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid >
        <Image Margin="190,22,190,310" Source="/img/intermarche-logo.png" Stretch="Fill"/>
        <StackPanel Margin="150,150,150,45">
            <Label x:Name="lblMenuPrincipal" Content="Menu principal" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"/>
            <Button x:Name="butRechercherReservation" Content="Voir les réservations" FontSize="14" Margin="0,15,0,0"/>
            <Button x:Name="butCreerReservation" Content="Commencer une nouvelle réservation" FontSize="14" Margin="0,20,0,0"/>
            <Label Content="Vous etes connectés sur la session "/>

        </StackPanel>
    </Grid>

</Window>
